{
    "compilerOptions": {
        "emitDecoratorMetadata": false,
        "declaration": false,
        "module": "commonjs",
        "rootDir": ".",
        "sourceMap": false,
        "sourceRoot": ".",
        "target": "es5"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./elements/**/*.ts",
        "./bower_components/*/*.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./elements/formatter.ts",
        "./elements/play.ts",
        "./elements/results.ts",
        "./bower_components/polymer-ts/polymer-ts.d.ts"
    ]
}
